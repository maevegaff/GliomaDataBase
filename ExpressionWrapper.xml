<tool id="expression_info" name="Expression Information" version="1.0">
    <description>Merges tumor information and gene expression data</description>

    <requirements>
        <requirement type="package">python</requirement>
        <requirement type="package">pandas</requirement>
    </requirements>

    <command>
        python '$C:\Users\maeve\.vscode\GliomaDataBase\Galaxy Scripts\ExpressionInformatio.py' 
        --file1 '$input1' 
        --file2 '$input2' 
        --output '$output'
    </command>

    <inputs>
        <param name="input1" type="data" format="csv" label="Tumor Information File"/>
        <param name="input2" type="data" format="csv" label="Gene Expression File"/>
    </inputs>

    <outputs>
        <data name="output" format="csv" label="Processed Expression File"/>
    </outputs>

    <help>
        This tool takes tumor information and gene expression data as inputs, processes them, and outputs a combined file.
    </help>
</tool>
